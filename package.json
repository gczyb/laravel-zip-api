{
    "$schema": "https://json.schemastore.org/package.json",
    "name": "laravel-zip-api",
    "version": "1.0.0",
    "description": "Laravel REST API for Hungarian postal codes, cities and counties",
    "private": true,
    "type": "module",
    "main": "vite.config.js",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "apidoc": "apidoc -i app/Http/Controllers/Api -o public/apidoc"
