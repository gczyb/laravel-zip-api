    "bugs": {
        "url": "https://github.com/gczyb/laravel-zip-api/issues"
    },
    "homepage": "https://github.com/gczyb/laravel-zip-api#readme",
    "devDependencies": {
        "@tailwindcss/vite": "^4.0.0",
        "apidoc": "^1.2.0",
        "axios": "^1.11.0",
        "concurrently": "^9.0.1",
        "laravel-vite-plugin": "^2.0.0",
        "tailwindcss": "^4.0.0",
        "vite": "^7.0.7"
    }
